<% layout("/layouts/boilerplate.ejs") %>
<body>
   
  <div class="row mt-3">
    <div class="col-6 offset-4 ">
        <h3>Listing Details : </h3>

    <div class="card show-card" style="width: 30rem; height:max-content">
    <img src="<%= listing.image?.url || 'https://images.unsplash.com/photo-1764708844823-00d2188dafd8?q=80&w=1287&auto=format&fit=crop' %>" class="card-img-top show-img" alt="listing_image">
    <div class="card-body">
    <p class="card-text">
        <h4><b><%=listing.title%></b></h4>
        <br>
        <%=listing.description%>
         <br>
         <!--
        price.toLocaleString("en-in") this function is used to conver number to indian standard with commas.
        first it converts num to string.
            -->
        &#8377;<%= listing.price ? listing.price.toLocaleString("en-in") : 0 %>/night<br>
        <%=listing.location%> <br>
        <%=listing.country%>
    </p>
  </div>
</div>
    <div class="btns mb-3">
        <a href="/listings/<%=listing._id%>/edit" class="btn edit-btn">Edit</a>
    <form method="POST" action="/listings/<%=listing._id%>?_method=DELETE" >
        <button class="btn btn-dark offset-2">Delete</button>
    </form>
    </div>
    
    </div>
  </div>
    

</body>
